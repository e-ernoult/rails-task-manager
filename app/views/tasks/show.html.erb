<h1><%= @task.title %></h1>

<button type="button" class="btn btn-light"><%= link_to "Edit task", edit_task_path(@task.id) %></button>

<div class="container task_details">
  <p><%= @task.details %></p>
</div>

<% if @task.completed %>
  <i class="far fa-check-square"></i> <span>This task is completed.</span>
  <% else %>
  <i class="far fa-square"></i> <span>This task is not completed yet.</span>
<% end %>
<br>
<br>
<%= link_to "Back to list", tasks_path %>
